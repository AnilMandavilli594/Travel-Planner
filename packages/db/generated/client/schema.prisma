generator client {
  provider = "prisma-client-js"
  output   = "../generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String       @id @default(uuid())
  email     String       @unique
  createdAt DateTime     @default(now())
  trips     TripMember[]
}

model Trip {
  id        String       @id @default(uuid())
  title     String
  ownerId   String
  content   String       @default("")
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt
  members   TripMember[]
  expenses  Expense[]
}

model TripMember {
  id     String @id @default(uuid())
  trip   Trip   @relation(fields: [tripId], references: [id])
  tripId String
  user   User   @relation(fields: [userId], references: [id])
  userId String
  role   String
}

model Expense {
  id        String   @id @default(uuid())
  tripId    String
  trip      Trip     @relation(fields: [tripId], references: [id])
  amount    Float
  paidBy    String
  category  String
  createdAt DateTime @default(now())
}
